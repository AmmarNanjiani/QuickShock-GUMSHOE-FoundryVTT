<form class="{{cssClass}} flexcol" autocomplete="off">
    <section class="page-structure">
        <div style="margin-right: 10px;">
            <h1>{{localize "qsgs.char-sheet.injuries"}} </h1>
            {{#each injuries}}
                <div class="card item" data-item-id="{{_id}}"> 
                    <a class="item-roll item-context" data-item-id="{{_id}}">
                    {{> "systems/qsgs/templates/sheets/actors/partials/card-sheet.hbs"}}
                    </a>
                </div>
            {{/each}}
        </div>
        <div>
            {{!-- PC Header Information --}}
            {{> "systems/qsgs/templates/sheets/actors/partials/pc-info.hbs"}}
            
            <div style="width: 1000px;">
                {{!-- PC Ability Page --}}
                {{> "systems/qsgs/templates/sheets/actors/partials/pc-ability-page.hbs"}}

                {{!-- Pillars of Sanity --}}
                <section class="sheet-content" style="height: 150px">
                    {{#ifEquals gameCreated "Trail of Cthulhu"}}
                    <h1>{{localize "qsgs.char-sheet.pillars"}}</h1>
                    {{else ifEquals gameCreated "YKRPG - Paris"}}
                    <h1>That Deuced Peculiar Business</h1>
                    {{else ifEquals gameCreated "YKRPG - The Wars"}}
                    <h1>That Damn Peculiar Thing</h1>
                    {{else ifEquals gameCreated "YKRPG - Aftermath"}}
                    <h1>Worst Memory</h1>
                    {{else ifEquals gameCreated "YKRPG - This Is Normal Now"}}
                    <h1>Freaking Weird Moment</h1>
                    {{/ifEquals}}
                    {{editor content=data.pillars target="data.pillars" button=true owner=owner editable=editable}}
                </section>
            </div>
        </div>
        <div style="margin-left: 10px;">
            <h1>{{localize "qsgs.char-sheet.shocks"}} </h1>
            {{#each shocks}}
                <div class="card item" data-item-id="{{_id}}"> 
                    <a class="item-roll item-context" data-item-id="{{_id}}">
                    {{> "systems/qsgs/templates/sheets/actors/partials/card-sheet.hbs"}}
                    </a>
                </div>
            {{/each}}
        </div>
    </section>
</form>