<form>
    <div style="display: flex; flex-direction: row;">
        <button type="button" onclick="changeNum(0)">0</button>
        <button type="button" onclick="changeNum(1)">1</button>
        <button type="button" onclick="changeNum(2)">2</button>
        <button type="button" onclick="changeNum(3)">3</button>
        <button type="button" onclick="changeNum(4)">4</button>
        <button type="button" onclick="changeNum(5)">5</button>
        <button type="button" onclick="changeNum(6)">6</button>
        <button type="button" onclick="changeNum(7)">7</button>
        <button type="button" onclick="changeNum(8)">8</button>
        <button type="button" onclick="changeNum(9)">9</button>
    </div>
    <div class="form-group">
        <label>Spend</label>
        <input id="inputbox" type="text" name="points" value="0" />
    </div>
</form>

<script>
    function changeNum(n) {
        document.getElementById("inputbox").value = n;
    }
</script>